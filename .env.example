# 数据库配置
# PostgreSQL 数据库连接字符串
# 格式: postgresql://用户名:密码@主机:端口/数据库名?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/socialwiz?schema=public"

# Redis 配置（可选，默认使用本地 Redis）
REDIS_URL="redis://localhost:6379"

# JWT 密钥（请在生产环境中使用强随机字符串）
JWT_SECRET="your-secret-key-change-in-production"

# 应用基础URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# AI Models API Keys
DEEPSEEK_API_KEY="your-deepseek-api-key"
QWEN_API_KEY="your-qwen-api-key"
OPENAI_API_KEY="your-openai-api-key"

# WeChat Platform
WECHAT_APP_ID="your-wechat-appid"
WECHAT_APP_SECRET="your-wechat-secret"

# Weibo Platform
WEIBO_APP_KEY="your-weibo-key"
WEIBO_APP_SECRET="your-weibo-secret"

# Douyin Platform
DOUYIN_CLIENT_KEY="your-douyin-key"
DOUYIN_CLIENT_SECRET="your-douyin-secret"

# Xiaohongshu Platform
XIAOHONGSHU_APP_ID="your-xiaohongshu-id"
XIAOHONGSHU_APP_SECRET="your-xiaohongshu-secret"

# Object Storage (OSS)
OSS_ACCESS_KEY="your-oss-access-key"
OSS_SECRET_KEY="your-oss-secret-key"
OSS_BUCKET="your-bucket-name"
OSS_REGION="your-region"
OSS_ENDPOINT="https://oss-cn-hangzhou.aliyuncs.com"

# OpenAI API 配置
# 从 https://platform.openai.com/api-keys 获取您的 API 密钥
OPENAI_API_KEY=your_openai_api_key_here

# 可选：其他环境变量
# NODE_ENV=development

# DeepSeek API 配置（如果使用 DeepSeek 模型）
# 从 https://platform.deepseek.com/api_keys 获取您的 API 密钥
DEEPSEEK_API_KEY=your_deepseek_api_key_here
