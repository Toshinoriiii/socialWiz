// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  platformAccounts PlatformAccount[]
  contents         Content[]
  aiGenerationLogs AIGenerationLog[]

  @@index([email])
}

// 平台类型枚举
enum Platform {
  WECHAT
  WEIBO
  DOUYIN
  XIAOHONGSHU
}

// 平台账号表
model PlatformAccount {
  id               String    @id @default(uuid())
  userId           String
  platform         Platform
  platformUserId   String
  platformUsername String
  accessToken      String // 加密存储
  refreshToken     String? // 加密存储
  tokenExpiry      DateTime?
  isConnected      Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  contentPlatforms ContentPlatform[]
  analytics        Analytics[]

  @@index([userId])
  @@unique([userId, platform])
}

// 内容状态枚举
enum ContentStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
}

// 内容表
model Content {
  id           String        @id @default(uuid())
  userId       String
  title        String
  content      String        @db.Text
  coverImage   String?
  images       String[]
  status       ContentStatus @default(DRAFT)
  aiGenerated  Boolean       @default(false)
  aiModel      String?
  scheduledAt  DateTime?
  publishedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  contentPlatforms ContentPlatform[]

  @@index([userId, status])
  @@index([scheduledAt])
}

// 发布状态枚举
enum PublishStatus {
  PENDING
  SUCCESS
  FAILED
}

// 内容平台关联表
model ContentPlatform {
  id                String        @id @default(uuid())
  contentId         String
  platformAccountId String
  platformContentId String?
  publishStatus     PublishStatus @default(PENDING)
  errorMessage      String?
  publishedUrl      String?
  createdAt         DateTime      @default(now())

  content         Content         @relation(fields: [contentId], references: [id], onDelete: Cascade)
  platformAccount PlatformAccount @relation(fields: [platformAccountId], references: [id], onDelete: Cascade)
  analytics       Analytics?

  @@index([contentId])
  @@index([platformAccountId])
}

// 数据分析表
model Analytics {
  id                String   @id @default(uuid())
  contentPlatformId String   @unique
  platformAccountId String
  date              DateTime
  views             Int      @default(0)
  likes             Int      @default(0)
  comments          Int      @default(0)
  shares            Int      @default(0)
  followers         Int      @default(0)
  engagementRate    Float    @default(0)
  createdAt         DateTime @default(now())

  contentPlatform ContentPlatform @relation(fields: [contentPlatformId], references: [id], onDelete: Cascade)
  platformAccount PlatformAccount @relation(fields: [platformAccountId], references: [id], onDelete: Cascade)

  @@index([platformAccountId, date])
}

// AI生成类型枚举
enum AIGenerationType {
  TEXT
  IMAGE
}

// AI生成记录表
model AIGenerationLog {
  id               String            @id @default(uuid())
  userId           String
  model            String
  prompt           String            @db.Text
  generatedContent String            @db.Text
  type             AIGenerationType
  tokensUsed       Int?
  duration         Int? // 毫秒
  createdAt        DateTime          @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
